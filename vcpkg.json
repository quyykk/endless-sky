{
	"dependencies": [
		"catch2",
		{
			"name": "glad",
			"features": ["gl-api-30", "gles2-api-30", "extensions"]
		},
		{
			"name": "glad",
			"features": ["glx"],
			"platform": "linux"
		},
		{
			"name": "glad",
			"features": ["wgl"],
			"platform": "windows"
		}
	],
	"features": {
		"system-libs": {
			"description": "System libraries required to build ES.",
			"dependencies": [
				{
					"name": "sdl2",
					"features": ["x11", "wayland"],
					"platform": "linux"
				},
				{
					"name": "sdl2",
					"platform": "!linux"
				},
				{
					"name": "openal-soft",
					"features": ["pipewire"],
					"platform": "linux"
				},
				{
					"name": "openal-soft",
					"platform": "!linux"
				},
				"libpng",
				"libjpeg-turbo",
				"libmad",
				{
					"name": "libuuid",
					"platform": "!windows & !osx"
				}
			]
		},
		"steam-libs": {
			"description": "System libraries not provided in the Steam Sniper Runtime",
			"dependencies": [
				"libmad"
			]
		}
	}
}
