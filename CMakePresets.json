    },
    {
      "name": "mingw32-debug",
      "displayName": "Debug",
      "configurePreset": "mingw32",
      "inherits": "debug"
    },
    {
      "name": "mingw32-release",
      "displayName": "Release",
      "configurePreset": "mingw32",
      "inherits": "release"
    },
    {
      "name": "mingw32-test",
      "displayName": "Tests",
      "configurePreset": "mingw32",
      "inherits": "test"
    },
    {
      "name": "vs-debug",
      "displayName": "Debug",
      "configurePreset": "vs",
      "inherits": "debug"
    },
    {
      "name": "vs-release",
      "displayName": "Release",
      "configurePreset": "vs",
      "inherits": "release"
    },
    {
      "name": "vs-test",
      "displayName": "Tests",
      "configurePreset": "vs",
      "inherits": "test"
    }
  ],
  "testPresets": [
    {
      "name": "test",
      "hidden": true,
      "configuration": "Release",
      "output": {
        "shortProgress": true,
		"outputOnFailure": true
      },
      "filter": {
        "include": {
          "label": "unit"
        }
      }
    },
    {
      "name": "benchmark",
      "hidden": true,
      "configuration": "Release",
      "output": {
        "verbosity": "verbose",
		"outputOnFailure": true
