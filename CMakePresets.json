      "inherits": "test"
    },
    {
      "name": "macos10.9-debug",
      "displayName": "Debug",
      "configurePreset": "macos10.9",
      "inherits": "debug"
    },
    {
      "name": "macos10.9-release",
      "displayName": "Release",
      "configurePreset": "macos10.9",
      "inherits": "release"
    },
    {
      "name": "macos10.9-test",
      "displayName": "Tests",
      "configurePreset": "macos10.9",
      "inherits": "test"
    },
    {
      "name": "xcode-debug",
      "displayName": "Debug",
