    },
    {
      "name": "test",
      "hidden": true,
      "inherits": "release",
      "targets": "EndlessSkyTests"
    },
    {
      "name": "test-integration",
      "hidden": true,
      "inherits": "release",
      "targets": [
        "EndlessSky",
        "EndlessSkyTests",
        "IntegrationTests"
      ]
    },
    {
